<% include partials/header.ejs  %>
<% include partials/navbar.ejs  %>

<%= data; %>
  <div class="row">
    <div class="col-md-8">
      <h3 class="center">
          Edit User
      </h3>
      <form method="post" action="/update/<%= data._id %>" name="updateUserForm">
      <div class="row">
        <div class="form-group">
          <label>User Name</label>
          <input type="text" name="user_name" class="form-control" value="<%= data.user_name %>" required>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input type="email" name="email" class="form-control" value="<%= data.email %>" required>
        </div>
        <div class="form-group">
          <label><bold>Status</bold></label>
            <div class="form-check">
              <label class="form-check-label" for="radio1">
                  <% if(data.active == 1){ %>
                    <input type="radio" class="form-check-input" id="radio1" name="status" value="1" checked>Active
                  <% } else { %>
                    <input type="radio" class="form-check-input" id="radio1" name="status" value="1" >Active
                  <% } %>
                
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label" for="radio2">
                  <% if(data.active == 0){ %>
                    <input type="radio" class="form-check-input" id="radio2" name="status" value="0" checked>Disable
                  <% } else { %>
                    <input type="radio" class="form-check-input" id="radio2" name="status" value="0">Disable
                  <% } %>            
                
              </label>
            </div>
            <input type="hidden" id="id" name="id" value="<%= data._id %>">
            <button type="submit" id="update"> Update </button>
          
        </div>
      </div>
    </form>
    </div>
  </div>

<% include partials/footer.ejs  %>
